# Production Environment Configuration for Jubair Boot House
# Copy this file to .env and update the values for your production environment

# Application Settings
ENVIRONMENT=production
DEBUG=false
APP_NAME=Jubair Boot House
APP_VERSION=1.0.0

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=2

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-immediately
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
# For local development (SQLite):
# DATABASE_URL=

# For production (PostgreSQL):
# DATABASE_URL=postgresql://username:password@localhost/jubair_boot_house
# DATABASE_URL=postgresql://username:password@host:port/database_name

# For Render (PostgreSQL):
# DATABASE_URL=postgresql://username:password@host:port/database_name

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_DIR=static/uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp

# CORS Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Gunicorn Settings
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_WORKERS=2

# SSL/TLS (if using Nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
